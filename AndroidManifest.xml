<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="0" android:versionName="0.9" package="anyremote.client.android">
	<uses-permission android:name="android.permission.BLUETOOTH" />
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
	<application android:icon="@drawable/anyremote"
		android:label="@string/app_name">
		<activity android:label="@string/app_name"
			android:screenOrientation="portrait" android:name="anyRemote">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name="SearchForm"></activity>
		<activity android:name="ListScreen"></activity>
		<activity android:name="TextScreen"></activity>
		<activity android:name="ControlScreen"></activity>
	</application>



	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	
	
	<uses-sdk android:minSdkVersion="7"></uses-sdk>
<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
</manifest> 